@using Microsoft.Extensions.Options;
@using Ventoura.Application.ViewModels;
@using Ventoura.Persistence.DAL;
@model OrderVM

@inject IOptions<StripeSettings> stripe;

@{
    decimal total = 0;
}

<section id="hero_2" class="background-image" data-background="url(/rev-slider-files/assets/6428772_357.jpg)">
    <div class="opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.6)">
        <div class="intro_title">
            <h1>Place your order</h1>
            <div class="bs-wizard row">

                <div class="col-4 bs-wizard-step complete">
                    <div class="text-center bs-wizard-stepnum">Your cart</div>
                    <div class="progress">
                        <div class="progress-bar"></div>
                    </div>
                    <a href="cart_transfer.html" class="bs-wizard-dot"></a>
                </div>
                <div class="col-4 bs-wizard-step active">
                    <div class="text-center bs-wizard-stepnum">Your details</div>
                    <div class="progress">
                        <div class="progress-bar"></div>
                    </div>
                    <a href="#" class="bs-wizard-dot"></a>
                </div>

                <div class="col-4 bs-wizard-step disabled">
                    <div class="text-center bs-wizard-stepnum">Finish!</div>
                    <div class="progress">
                        <div class="progress-bar"></div>
                    </div>
                    <a href="confirmation_transfer.html" class="bs-wizard-dot"></a>
                </div>
            </div>
            <!-- End bs-wizard -->
        </div>
        <!-- End intro-title -->
    </div>
    <!-- End opacity-mask-->
</section>
<!-- End Section hero_2 -->
<main>
    <!-- End position -->

    <div class="container margin_60">
        <div class="row">
            <div class="col-lg-8 add_bottom_15">
                <form method="post" onchange="this.form.submit()">
                    <div class="form_title">
                        <h3><strong>1</strong>Your Details</h3>
                        <p>
                            Mussum ipsum cacilds, vidis litro abertis.
                        </p>
                    </div>
                    <div class="step">
                        <div class="row">
                            <div class="col-sm-6">
                                <input asp-for="Price" type="hidden" value="@Model.Price">
                                <div class="form-group">
                                    <label asp-for="FirstName">First name</label>
                                    <input asp-for="FirstName" class="form-control">
                                    <span asp-validation-for="FirstName"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="LastName">Last name</label>
                                    <input asp-for="LastName" class="form-control" >
                                    <span asp-validation-for="LastName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" class="form-control" >
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Telephone">Telephone</label>
                                    <input asp-for="Telephone" class="form-control">
                                    <span asp-validation-for="Telephone"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Country">Country name</label>
                                    <input asp-for="Country" class="form-control">
                                    <span asp-validation-for="Country"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="City">City name</label>
                                    <input asp-for="City" class="form-control">
                                    <span asp-validation-for="City"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Address">Address</label>
                                    <input asp-for="Address"  class="form-control">
                                    <span asp-validation-for="Address"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="ZipCode">Zipcode</label>
                                    <input asp-for="ZipCode" class="form-control">
                                    <span asp-validation-for="ZipCode"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="OrderNote">Order Note</label>
                                    <input asp-for="OrderNote"  class="form-control">
                                    <span asp-validation-for="OrderNote"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!--End step -->

                    <div class="form_title">
                        <h3><strong>2</strong>Payment Information</h3>
                        <script src="//checkout.stripe.com/v2/checkout.js"
                                class="stripe-button"
                                data-key="@stripe.Value.Publishablekey"
                                data-amount="@ViewBag.Total"
                                data-name="Your project name"
                                data-locale="en"
                                data-discription="Sample charge"
                                data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                                data-zip-code="true">
                        </script>
                    </div>
                </form>
            </div>
            <aside class="col-lg-4">
                <div class="box_style_1">
                    <h3 class="inner">- Summary -</h3>
                    <table class="table table_summary">
                        <thead>
                            <tr>
                                <th class="cart-product-name">Product</th>
                                <th class="cart-product-total">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                                <tr class="cart_item">
                                    <td class="cart-product-name">
                                        @Model.Tour.Name
                                        
                                        <strong class="product-quantity" >
                                            @Model.Tour.Price
                                        </strong> 
                                       
                                    </td>
                                   
                                </tr>
                        </tbody>
                    </table>
                    <a class="btn_full_outline" asp-action="Index" asp-controller="Tour"><i class="icon-right"></i> Continue shopping</a>
                </div>
                <div class="box_style_4">
                    <i class="icon_set_1_icon-57"></i>
                    <h4>Need <span>Help?</span></h4>
                    <a href="tel://004542344599" class="phone">+45 423 445 99</a>
                    <small>Monday to Friday 9.00am - 7.30pm</small>
                </div>
            </aside>

        </div>
        <!--End row -->
    </div>
    <!--End container -->
</main>
<!-- End main -->